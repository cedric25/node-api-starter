{
  "name": "start-node",
  "version": "0.6.0",
  "description": "Simple starting point to create a Node.js API",
  "main": "server.js",
  "keywords": [
    "nodejs",
    "fastify",
    "starter"
  ],
  "author": "Cedric Nicoloso <cedric.nicoloso@gmail.com>",
  "license": "ISC",
  "engines": {
    "node": "20.x",
    "npm": "9.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cedric25/node-api-starter.git"
  },
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "start": "node dist/index.js",
    "dev": "nodemon -r dotenv/config src/index.ts | pino-pretty -tc",
    "dev:debug": "LOG_LEVEL=debug npm run dev",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules npx jest .*.spec.js",
    "test:int": "NODE_OPTIONS=--experimental-vm-modules npx jest .*.test.js",
    "test": "npm run test:unit & npm run test:int",
    "lint": "npm run prettier && npm run eslint",
    "prettier": "prettier src --check",
    "prettier:fix": "prettier src --write",
    "eslint": "eslint src",
    "eslint:fix": "eslint src --fix",
    "bump-to-minor-versions": "npx --yes npm-check-updates -u --target minor",
    "bump-to-patch-versions": "npx --yes npm-check-updates -u --target patch"
  },
  "dependencies": {
    "fastify": "4.20.0",
    "pino": "8.14.1",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@types/node": "20.4.5",
    "dotenv": "16.3.1",
    "eslint": "8.45.0",
    "eslint-plugin-jest": "27.2.3",
    "jest": "29.6.1",
    "nodemon": "3.0.1",
    "pino-pretty": "10.2.0",
    "prettier": "3.0.0",
    "supertest": "6.3.3",
    "ts-node": "10.9.1",
    "typescript": "5.1.6"
  }
}
