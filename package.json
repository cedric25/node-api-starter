{
  "name": "start-node",
  "version": "0.2.0",
  "description": "Simple starting point to create a Node.js API",
  "main": "server.js",
  "keywords": [
    "nodejs",
    "express",
    "starter"
  ],
  "author": "Cedric Nicoloso <cedric.nicoloso@gmail.com>",
  "license": "ISC",
  "engines": {
    "node": "14.x",
    "npm": "6.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cedric25/node-api-starter.git"
  },
  "scripts": {
    "start": "npm run start:dev",
    "dev": "nodemon -r dotenv/config server.js | npx bunyan --time local --output short",
    "start:debug": "LOG_LEVEL=debug npm run start:dev",
    "start:prod": "NODE_ENV=production node server",
    "test": "FORCE_COLOR=true jest | npx bunyan --time local --output short",
    "lint": "prettier src --check",
    "lint:fix": "prettier src --write"
  },
  "dependencies": {
    "bunyan": "1.8.15",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "morgan": "1.10.0"
  },
  "devDependencies": {
    "jest": "26.6.3",
    "nodemon": "2.0.7",
    "prettier": "2.2.1",
    "supertest": "6.1.3"
  }
}
